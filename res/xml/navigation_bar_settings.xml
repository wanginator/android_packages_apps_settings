<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/navigation_bar_title">

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NavBar"
        android:key="navigation_bar_buttons_layout"
        android:title="@string/navigation_bar_buttons_layout_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NavRing"
        android:key="navigation_ring"
        android:title="@string/navigation_ring_title" />

    <ListPreference
        android:key="navigation_bar_height"
        android:dialogTitle="@string/navigation_bar_height"
        android:title="@string/navigation_bar_height"
        android:entries="@array/navigation_bar_height_entries"
        android:entryValues="@array/navigation_bar_height_values"
        android:defaultValue="48"
        android:persistent="false" />

 <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="navbar_button_tint"
        android:title="@string/navbar_button_tint_title"
        android:defaultValue="#ffffff" />
</PreferenceScreen>
