<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="system_settings">

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.StatusBarClockStyle"
        android:key="clock_style_pref"
        android:summary="@string/status_bar_clock_summary"
        android:title="@string/status_bar_clock" />

    <PreferenceScreen
       android:id="@+id/omniswitch"
       android:title="@string/omniswitch_category"
       android:fragment="com.android.settings.rascarlo.OmniSwitch" />

    <PreferenceScreen
            android:key="wakelock_blocker"
            android:fragment="com.android.settings.rascarlo.WakeLockBlocker"
            android:title="@string/wakelock_blocker" />

    <PreferenceScreen
        android:id="@+id/theme_settings"
        android:fragment="com.android.settings.slim.themes.ThemeSettings"
        android:title="@string/theme_menu_title" />

    <PreferenceCategory
          android:title="@string/additional_settings_interface_title">
          <PreferenceScreen
            android:key="recents_ram_bar"
            android:fragment="com.android.settings.rascarlo.RamBar"
            android:title="@string/ram_bar" /> 
     </PreferenceCategory>

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.PlugInPromptSettings"
        android:key="plug_in_prompt_settings"
        android:title="@string/plug_in_prompt_settings_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NotificationLightSettings"
        android:key="notification_pulse"
        android:title="@string/led_settings_category_title" />
</PreferenceScreen>

